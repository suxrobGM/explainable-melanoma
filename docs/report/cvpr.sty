% ---------------------------------------------------------------
%
% CVPR Style File
% for LaTeX2e
%
% ---------------------------------------------------------------

\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{cvpr}

% Options
\newif\ifcvprfinal
\cvprfinalfalse
\DeclareOption{final}{\cvprfinaltrue}
\ProcessOptions\relax

% Packages
\RequirePackage{eso-pic}
\RequirePackage{xspace}

% Page layout
\setlength{\textheight}{8.875in}
\setlength{\textwidth}{6.875in}
\setlength{\columnsep}{0.3125in}
\setlength{\topmargin}{0in}
\setlength{\headheight}{0in}
\setlength{\headsep}{0in}
\setlength{\parindent}{1pc}
\setlength{\oddsidemargin}{-.304in}
\setlength{\evensidemargin}{-.304in}

% Captions
\long\def\@makecaption#1#2{%
  \vskip\abovecaptionskip
  \sbox\@tempboxa{#1: #2}%
  \ifdim \wd\@tempboxa >\hsize
    #1: #2\par
  \else
    \global \@minipagefalse
    \hb@xt@\hsize{\hfil\box\@tempboxa\hfil}%
  \fi
  \vskip\belowcaptionskip}

% Abstract
\renewenvironment{abstract}
{\centerline{\large\bf Abstract}\vspace{0.5ex}\begin{quote}}
{\par\end{quote}\vskip 1ex}

% Title
\def\@maketitle{%
  \newpage
  \null
  \vskip .375in%
  \begin{center}%
    {\Large\bf \@title \par}%
    \vskip .75em%
    {\large
      \lineskip .5em%
      \begin{tabular}[t]{c}%
        \@author
      \end{tabular}\par}%
  \end{center}%
  \par
  \vskip .5ex}

% Section formatting
\def\section{\@startsection {section}{1}{\z@}
   {10pt plus 2pt minus 2pt}{7pt plus 2pt minus 2pt}
   {\large\bf\raggedright}}
\def\subsection{\@startsection {subsection}{2}{\z@}
   {8pt plus 2pt minus 2pt}{6pt plus 2pt minus 2pt}
   {\normalsize\bf\raggedright}}
\def\subsubsection{\@startsection {subsubsection}{3}{\z@}
   {6pt plus 2pt minus 2pt}{6pt plus 2pt minus 2pt}
   {\normalsize\it\raggedright}}

% Footnotes
\footnotesep 6.65pt %
\skip\footins 9pt plus 4pt minus 2pt
\def\footnoterule{\kern-3pt \hrule width 5pc \kern 2.6pt }
\setcounter{footnote}{0}

% Lists
\setlength\partopsep{1pt plus 0.5pt minus 0.5pt}
\flushbottom
\sloppy

% Final copy command
\newcommand{\cvprfinalcopy}{\cvprfinaltrue}

\endinput
